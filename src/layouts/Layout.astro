---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

interface Props {
	title: string;
	description?: string;
	image?: string;
	articleDate?: string;
	author?: string;
}
const {
	title = "AstroSite Editorials",
	description = "Premium insights on development and tech",
	image = "/favicon.svg",
	articleDate,
	author,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || Astro.url);
const base = import.meta.env.BASE_URL;

const schema = {
	"@context": "https://schema.org",
	"@type": articleDate ? "Article" : "WebSite",
	headline: title,
	description: description,
	image: new URL(image, Astro.site || Astro.url).toString(),
	url: canonicalURL.toString(),
	...(author && { author: { "@type": "Person", name: author } }),
	...(articleDate && { datePublished: new Date(articleDate).toISOString() }),
};
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
		<link rel="icon" href={`${base}/favicon.ico`} />
		<meta name="generator" content={Astro.generator} />

		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta
			property="og:image"
			content={new URL(image, Astro.site || Astro.url)}
		/>

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta
			property="twitter:image"
			content={new URL(image, Astro.site || Astro.url)}
		/>

		<!-- JSON-LD Structured Data -->
		<script type="application/ld+json" set:html={JSON.stringify(schema)} />
	</head>
	<body>
		<Nav />
		<slot />
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
